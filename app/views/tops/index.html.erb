<div class="row">
  <div class="col-md-9">
    <!-- トップコンテンツ -->
    <div class="top-content-area">
      <h1>みんなで世界を変えよう！</h1>
      <p>人が参加しています</p>
      <p><%= link_to 'みんなで社会を動かすしくみ', campaigns_path, class: 'start-campaign-link' %></p>
      <%= link_to 'キャンペーンを立ち上げる', new_campaign_path, {class: 'btn btn-primary btn-lg'}%>
    </div>

    <!-- 新規キャンペーン -->
    <% @campaigns.each do |campaign| %>
      <% campaign.tags.each do |tag| %>
        <div class="card">
          <div class="card-header">
            <i class="fas fa-tag"></i><strong class="focusd-tag"><%= tag.name %></strong>で注目のキャンペーン
          </div>

          <div class="card-body">
            <p class="campaign-for"><%= campaign.campaign_for %>宛のキャンペーン</p>
            <h5 class="card-title"><%= campaign.title %></h5>
            <img src="" class="card-img-right" alt="カードの画像">
            
            <p class="card-text"><%= campaign.content %></p>
          </div>

          <div class="card-footer">
            <div class="float-left"><%= campaign.supporters.name %></div>
            <div class="float-right"><%= campaign.supporters.count %>人の賛同者</div>
          </div>      
        </div>
      <% end %>
    <% end %>
  </div>

  <%= render 'layouts/sidemenu' %>
</div>