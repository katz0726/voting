<div class="auth-content-area">
  <h2>サインアップ</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group field form-inline">
      <%= f.label :username_last %>
      <%= f.text_field :username_last, class: 'form-control' %>

      <%= f.label :username_first %>
      <%= f.text_field :username_first, class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :gender %>
      <%= f.select :gender, VotingConst::GENDER.invert, {},  class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(最低<%= @minimum_password_length %> 文字入力してください)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "#{t('devise.registrations.new.sign_up')}", class: 'btn btn-primary w-100' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>