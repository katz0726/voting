<p id="notice"><%= notice %></p>

<h1 class="page-title"><%= Campaign.human_attribute_name :campaign_list %></h1><br>

<ul class="nav nav-tabs">
  <li class="nav-item"><%= link_to "#{Campaign.human_attribute_name :search_attention}", campaigns_path, {class: 'nav-link active'} %></li>
  <li class="nav-item"><%= link_to "#{Campaign.human_attribute_name :search_popular}", campaigns_path(condition: 'popular'), {class: 'nav-link'} %></li>
  <li class="nav-item"><%= link_to "#{Campaign.human_attribute_name :search_latest}", campaigns_path(condition: 'latest'), {class: 'nav-link'} %></li>
  <li class="nav-item"><%= link_to "#{Campaign.human_attribute_name :search_succeed}", campaigns_path(condition: 'succeed'), {class: 'nav-link'} %></li>
</ul>

<!-- 新規キャンペーン -->
<div class="campaign-list">
  <% @campaigns.each do |campaign| %>
  <div class="card">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <img src="" class="card-img-right" alt="カードの画像">
      </div>

      <div class=" card-body col-xs-12 col-sm-8">
        <h5 class="card-title"><%= link_to campaign.title, campaign_path(campaign) %></h5>
        
        <p class="card-text"><%= campaign.content %></p>
        <span class="stretched-link">read more</span>

        <div></div>
        <p>
          目標<%= delimited_by_comma(campaign.goal) %>人のうち
          <strong><%= delimited_by_comma(campaign.supporters.count) %>人が賛同しました</strong>
        </p>
      </div>  
  </div>
  <% end %>
</div>

<button type="button" class="btn btn-secondary btn-lg w-100"><%= t('common/crud.readmore.title')%></button>