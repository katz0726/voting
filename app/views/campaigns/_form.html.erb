<% if @campaign.errors.any? %>
  <div>
    <% @campaign.errors.full_messages.each do |message| %>
      <p class="error-message">
        <span class="message-icon"><i class="fas fa-times-circle"></i></span>
        <%= message %>
      </p>
    <% end %>
  </div>
<% end %>

<%= form_with(model: @campaign, local: true) do |form| %>
  <%= form.hidden_field :user_id, :value =>  current_user.id %>

  <div class="form-group field">
    <%= form.label :title %>
    <span id="help-icon-title" class="help-icon">
      <i class="far fa-question-circle message-icon"></i>
      <p id="title-bubble" class="bubble">bb</p>
    </span>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group field">
    <%= form.label :content %>
    <span id="help-icon-content" class="help-icon">
      <i class="far fa-question-circle"></i>
      <p id="content-bubble" class="bubble">aa</p>
    </span>
    
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group field">
    <%= form.label :goal %>
    <%= form.text_field :goal, class: 'form-control' %>
  </div>

  <div class="form-group field">
    <%= form.label :campaign_for %>
    <%= form.text_field :campaign_for, class: 'form-control' %>
  </div>

  <div class="form-group field">
    <%= form.fields_for :tags do |tag| %>
      <%= render 'tags_field', form: tag %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "#{t('common/crud.create.title')}", class: 'btn btn-primary w-100' %>
  </div>
<% end %>
