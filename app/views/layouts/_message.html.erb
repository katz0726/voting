<% if notice.present? %>
  <p class="notice-message">
    <span class="message-icon"><i class="fas fa-check-circle"></i></span>
    <%= notice %>
  </p>
<% end %>

<% if alert.present? %>
  <p class="error-message">
    <span class="message-icon"><i class="fas fa-times-circle"></i></span>
    <%= alert %>
  </p>
<% end %>